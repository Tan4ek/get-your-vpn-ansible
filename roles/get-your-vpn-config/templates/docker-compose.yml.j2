version: '3'
services:
  get-your-vpn-config:
    image: tan4ek/get-your-vpn-config:latest
    container_name: {{ get_your_vpn_config_container_name }}
    ports:
      - "{{ get_your_vpn_config_container_port }}:8080"
    volumes:
      - ./config.ini:/app/config.ini
      - ./get-your-vpn-config.sqlite3:/app/get-your-vpn-config.sqlite3
    restart: always

networks:
  default:
    external:
      name: get-your-vpn
